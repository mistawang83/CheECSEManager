<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="245.0" prefWidth="403.0" spacing="8.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.mcgill.ecse.cheecsemanager.fxml.controller.purchase.PurchaseFormController">
		<children>
			<ScrollPane fitToWidth="true" maxWidth="400" vbarPolicy="NEVER">
				<content>
                    <VBox maxWidth="425.0" prefHeight="191.0" prefWidth="407.0" spacing="12.0">
                        <padding>
                            <Insets bottom="16" top="16" />
                        </padding>
                        <HBox alignment="CENTER">
							<Label fx:id="labelFarmer" minWidth="140" prefWidth="140" />
							<ChoiceBox fx:id="choiceBoxFarmer" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="CENTER">
							<Label fx:id="labelNrCheeseWheels" minWidth="140" prefWidth="140" />
							<TextField fx:id="inputFieldNrCheeseWheels" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="CENTER">
							<Label fx:id="labelMonthsAged" minWidth="140" prefWidth="140" />
							<ChoiceBox fx:id="choiceBoxMonthsAged" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="CENTER">
							<Label fx:id="labelPurchaseDate" minWidth="140" prefWidth="140" />
							<DatePicker fx:id="inputFieldPurchaseDate" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
				</content>
			</ScrollPane>
			<Text fx:id="textError" />
			<HBox alignment="CENTER" spacing="16.0">
				<children>
					<Button fx:id="buttonSave" mnemonicParsing="false" onAction="#onSave" styleClass="add-button" text="Save" />
					<Button fx:id="buttonCancel" mnemonicParsing="false" onAction="#onCancel" text="Cancel" />
				</children>
			</HBox>
		</children>
</VBox>
