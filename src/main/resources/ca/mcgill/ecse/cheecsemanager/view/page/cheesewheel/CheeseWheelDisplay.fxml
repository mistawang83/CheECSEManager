<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:id="parentContainer"
      fx:controller="ca.mcgill.ecse.cheecsemanager.fxml.controller.cheesewheel.CheeseWheelDisplayController" spacing="16"
      VBox.vgrow="ALWAYS">
    <HBox spacing = "10">
        <Button fx:id="buttonAdd" text="Add Purchase" onAction="#onAdd" styleClass="add-button">
            <graphic>
                <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                    <Image url="@../../../image/add.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="buttonSell" text="Add Order" onAction="#onSell" styleClass="sell-button">
            <graphic>
                <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                    <Image url="@../../../image/sell.png"/>
                </ImageView>
            </graphic>
        </Button>
    </HBox>
    <VBox fx:id="childContainer" VBox.vgrow="ALWAYS" />
</VBox>
