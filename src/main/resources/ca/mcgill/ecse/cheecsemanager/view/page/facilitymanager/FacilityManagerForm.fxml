<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import ca.mcgill.ecse.cheecsemanager.fxml.layout.ItemPanel?>

<VBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER" spacing="8.0"
	fx:controller="ca.mcgill.ecse.cheecsemanager.fxml.controller.facilitymanager.FacilityManagerFormController">
		<children>
			<ItemPanel hgap="10" vgap="10" fx:id="mainPanel" alignment="CENTER" >
				<children>
					<ScrollPane maxWidth="400" fitToWidth="true" fitToHeight="true" >
						<content>
							<VBox spacing="12.0" maxWidth="400">
								<padding>
									<Insets top="16" bottom="16"/>
								</padding>
								<HBox alignment="CENTER">
									<Label fx:id="labelEmail" styleClass="form-label" minWidth="140" prefWidth="140" />
									<TextField fx:id="inputFieldEmail" HBox.hgrow="ALWAYS" />
								</HBox>
								<HBox alignment="CENTER" spacing= "5">
									<Label fx:id="labelPassword" styleClass="form-label" minWidth="140" prefWidth="140" />
									<StackPane HBox.hgrow="ALWAYS">
                                        <PasswordField fx:id="inputFieldPassword" prefWidth="200" />
                                        <TextField fx:id="inputFieldPasswordVisible" prefWidth="200" visible="false" managed="false"/>
                                    </StackPane>
                                    <Button fx:id="buttonTogglePassword" text="Show" onAction="#onTogglePassword" styleClass="reveal-button"/>
								</HBox>
							</VBox>
						</content>
					</ScrollPane>
					<Text fx:id="textError" styleClass="error-text"/>
					<HBox alignment="CENTER" spacing="16.0">
						<children>
							<Button fx:id="buttonSave" mnemonicParsing="false" onAction="#onSave" text="Save" styleClass="add-button" />
							<Button fx:id="buttonCancel" mnemonicParsing="false" onAction="#onCancel" text="Cancel" />
						</children>
					</HBox>
				</children>
			</ItemPanel>
		</children>
</VBox>
