<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import ca.mcgill.ecse.cheecsemanager.fxml.layout.ItemPanel?>

<VBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER" spacing="8.0"
	fx:controller="ca.mcgill.ecse.cheecsemanager.fxml.controller.cheesewheel.CheeseWheelFormController">
		<children>
            <ItemPanel alignment="TOP_CENTER">
                <children>
                    <Label text="Edit Cheese Wheel" styleClass="text-panel-heading"/>
                    <ScrollPane maxWidth="400" fitToWidth="true" vbarPolicy="NEVER">
                        <content>
                            <VBox spacing="12.0" maxWidth="400">
                                <padding>
                                    <Insets top="16" bottom="16"/>
                                </padding>
                                <HBox alignment="CENTER">
                                    <Label fx:id="labelId" styleClass="form-label" minWidth="140" prefWidth="140" />
                                    <TextField fx:id="inputFieldId" HBox.hgrow="ALWAYS" />
                                </HBox>
                                <HBox alignment="CENTER">
                                    <Label fx:id="labelMonthsAged" styleClass="form-label" minWidth="140" prefWidth="140" />
                                    <ChoiceBox fx:id="choiceBoxMonthsAged" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
                                </HBox>
                                <HBox alignment="CENTER">
                                    <Label fx:id="labelIsSpoiled" styleClass="form-label" minWidth="140" prefWidth="140" />
                                    <CheckBox fx:id="checkBoxIsSpoiled" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
                                </HBox>
                            </VBox>
                        </content>
                    </ScrollPane>
                    <Text fx:id="textError" styleClass="error-text"/>
                    <HBox alignment="CENTER" spacing="16.0">
                        <children>
                            <Button fx:id="buttonSave" mnemonicParsing="false" onAction="#onSave" text="Save" styleClass="add-button" />
                            <Button fx:id="buttonCancel" mnemonicParsing="false" onAction="#onCancel" text="Cancel" />
                        </children>
                    </HBox>
            </children>
        </ItemPanel>
    </children>
</VBox>
