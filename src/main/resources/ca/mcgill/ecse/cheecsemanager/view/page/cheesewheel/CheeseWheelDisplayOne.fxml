<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import ca.mcgill.ecse.cheecsemanager.fxml.layout.DetailView?>
<?import ca.mcgill.ecse.cheecsemanager.fxml.layout.ItemPanel?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER" spacing="8.0"
      fx:controller="ca.mcgill.ecse.cheecsemanager.fxml.controller.cheesewheel.CheeseWheelDisplayOneController">
    <children>
        <HBox alignment="CENTER" spacing="8.0">
            <children>
	            <ItemPanel alignment="TOP_CENTER">
                    <Label text="Cheese Information" styleClass="text-panel-heading"/>
                    <ScrollPane maxWidth="400" fitToWidth="true" fitToHeight="true">
                        <content>
                            <DetailView hgap="12.0" vgap="12.0" maxWidth="400" fx:id="detailView" styleClass="grid-pane">
                                <padding>
                                    <Insets top="16" bottom="16"/>
                                </padding>
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="35" prefWidth="100" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="65" prefWidth="100" />
                                </columnConstraints>
                                <!--Added Programmatically-->
                            </DetailView>
                        </content>
                    </ScrollPane>
                </ItemPanel>
                <ItemPanel alignment="TOP_CENTER">
                    <Label text="Wheel Information" styleClass="text-panel-heading"/>
                    <ScrollPane maxWidth="400" fitToWidth="true" fitToHeight="true">
                        <content>
                            <DetailView hgap="12.0" vgap="12.0" maxWidth="400" fx:id="extraDetailView" styleClass="grid-pane">
                                <padding>
                                    <Insets top="16" bottom="16"/>
                                </padding>
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="35" prefWidth="100" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="65" prefWidth="100" />
                                </columnConstraints>
                                <!--Added Programmatically-->
                            </DetailView>
                        </content>
                    </ScrollPane>
                </ItemPanel>
            </children>
        </HBox>
    </children>
</VBox>
