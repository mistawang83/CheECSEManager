<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<?import ca.mcgill.ecse.cheecsemanager.fxml.layout.ItemPanel?>
<?import ca.mcgill.ecse.cheecsemanager.fxml.layout.DetailView?>

<VBox xmlns:fx="http://javafx.com/fxml" alignment="TOP_CENTER" spacing="8.0" fillWidth="true"
      fx:controller="ca.mcgill.ecse.cheecsemanager.fxml.controller.wholesalecompany.WholesaleCompanyDisplayOneController">
    <children>
        <ItemPanel alignment="TOP_CENTER">
		    <ScrollPane maxWidth="400" fitToWidth="true" fitToHeight="true">
                <content>
                    <DetailView hgap="12.0" vgap="12.0" maxWidth="400" fx:id="detailView" styleClass="grid-pane">
                        <padding>
                            <Insets top="16" bottom="16"/>
                        </padding>
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="35" prefWidth="100" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="65" prefWidth="100" />
                        </columnConstraints>
                        <!--Added Programmatically-->
                    </DetailView>
                </content>
            </ScrollPane>
        </ItemPanel>
        <ItemPanel alignment = "TOP_CENTER" fx:id="orderPanel" maxWidthRatio="0.6">
            <children>
                <Label text="Orders Made" styleClass="text-panel-heading" />
                <ScrollPane fitToWidth="true" fitToHeight="true" maxWidth="Infinity">
                    <content>
                        <TableView fx:id="orderView" VBox.vgrow="ALWAYS" maxWidth="Infinity" />
                    </content>
                </ScrollPane>
            </children>
        </ItemPanel>
    </children>
</VBox>
